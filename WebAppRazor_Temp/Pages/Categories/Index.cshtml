@page
@model WebAppRazor_Temp.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4">
		<div class="col-6">	
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end pb-3">	
			<a asp-page="/categories/Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create new category
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display order
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.CategoryList.OrderBy(s => s.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>	
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>
